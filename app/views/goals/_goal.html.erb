<div class="goal-container">
  <div class="goal-title"><%= goal.title %></div><br>
  <div class="goal-description"><%= goal.description %></div><br>
  <div class="goal-container-footer">
    <div class="goal-inner-container-footer left">
      <label class="goal-label">DATE SET</label>
      <div class="goal-date-set"><%= goal.created_at %></div>
    </div>
    <div class="goal-inner-container-footer right">
      <label class="goal-label">DEAD LINE</label>
      <div class="goal-date-set"><%= goal.due_date %></div>
    </div>
  </div>

  <label class="goal-label">PROGRESS</label><br><br>
  <div class="goal-progress-container">
    <div class="progress" style="width:<%= goal.progress %>%;"></div>
    <div class="progress-text"><%= goal.progress %>% complete</div>
  </div>
</div>